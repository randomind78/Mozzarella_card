<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title">
    <item name="android:textSize">@dimen/title_textSize</item>
    <item name="android:paddingLeft">@dimen/title_paddingLeft</item>
        <item name="android:textColor">@color/title_textColor</item>
        <item name="android:background">@color/background_title_color</item>
</style>
    <style name="description">
    <item name="android:textSize">@dimen/description_textSize</item>
    <item name="android:layout_marginLeft">@dimen/description_marginLeft</item>
    <item name="android:layout_marginRight">@dimen/description_marginRight</item>
    <item name="android:layout_marginBottom">@dimen/description_marginBottom</item>
</style>
    <style name="business_information">
    <item name="android:textSize">@dimen/business_information_textSize</item>
    <item name="android:layout_marginLeft">@dimen/business_information_marginLeft</item>
    <item name="android:layout_marginBottom">@dimen/business_information_marginBottom</item>
        <item name="android:textColorLink">@color/links_color</item>
        <item name="android:drawablePadding">@dimen/business_information_drawablePadding</item>
</style>
    <style name="logo">
    <item name="android:layout_marginTop">@dimen/Logo_marginTop</item>
    <item name="android:layout_marginLeft">@dimen/Logo_marginLeft</item>
</style>
</resources>
